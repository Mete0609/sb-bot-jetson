<?xml version="1.0"?>
<robot name="robot" xmlns:xacro="http://ros.org/wiki/xacro">
  <!-- Base footprint -->
  <link name="base_footprint" />

  <joint name="base_joint" type="fixed">
    <parent link="base_footprint" />
    <child link="base_link" />
    <origin xyz="0 0 0.062" rpy="0 0 0" />
  </joint>

  <link name="base_link">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0" />
      <geometry>
        <cylinder radius="0.2" length="0.01" />
      </geometry>
      <material name="base_link_material">
        <color rgba="0.246 0.262 0.283 1" />
      </material>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0" />
      <geometry>
        <cylinder radius="0.2" length="0.01" />
      </geometry>
    </collision>
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0" />
      <mass value="0.1" />
      <inertia ixx="0.001" ixy="0" ixz="0" iyy="0.001" iyz="0" izz="0.001" />
    </inertial>
  </link>

  <xacro:macro name="add_box_pillar" params="name x y z">
    <joint name="base_link_to_${name}" type="fixed">
      <parent link="base_link" />
      <child link="${name}" />
      <origin xyz="${x} ${y} ${z}" rpy="0 0 0" />
    </joint>
    <link name="${name}">
      <visual>
        <origin xyz="0 0 0" rpy="0 0 0" />
        <geometry>
          <box size="0.02 0.02 0.64" />
        </geometry>
        <material name="${name}_material">
          <color rgba="1 1 1 1" />
        </material>
      </visual>
    </link>
  </xacro:macro>

  <!-- IMU -->
  <joint name="base_link_to_imu" type="fixed">
    <parent link="base_link" />
    <child link="imu" />
    <origin xyz="0 -0.1 0.01" rpy="0 0 0" />
  </joint>
  <link name="imu">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0" />
      <geometry>
        <box size="0.03 0.03 0.01" />
      </geometry>
      <material name="imu_material">
        <color rgba="0.84 0.96 0.01 1" />
      </material>
    </visual>
  </link>

  <!-- Radar -->
  <joint name="base_link_to_radar" type="fixed">
    <parent link="base_link" />
    <child link="radar" />
    <origin xyz="0 0.15 0" rpy="0 0 0" />
  </joint>
  <link name="radar">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0" />
      <geometry>
        <cylinder radius="0.03" length="0.03" />
      </geometry>
      <material name="radar_material">
        <color rgba="0 0 0 1" />
      </material>
    </visual>
  </link>

  <!-- Wheels -->
  <xacro:macro name="wheel" params="side x">
    <joint name="base_link_to_${side}_wheel" type="continuous">
      <parent link="base_link" />
      <child link="${side}_wheel" />
      <origin xyz="${x} 0 0" rpy="0 -1.57 0" />
      <axis xyz="0 0 1" />
    </joint>
    <link name="${side}_wheel">
      <visual>
        <origin xyz="0 0 0" rpy="0 0 0" />
        <geometry>
          <cylinder radius="0.063" length="0.02" />
        </geometry>
        <material name="${side}_wheel_material">
          <color rgba="0 0 0 1" />
        </material>
      </visual>
    </link>
  </xacro:macro>

  <xacro:wheel side="left" x="-0.19"/>
  <xacro:wheel side="right" x="0.19"/>

  <!-- Top Plate -->
  <joint name="base_link_to_top" type="fixed">
    <parent link="base_link" />
    <child link="top" />
    <origin xyz="0 0 0.65" rpy="0 0 0" />
  </joint>
  <link name="top">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0" />
      <geometry>
        <cylinder radius="0.2" length="0.01" />
      </geometry>
      <material name="top_material">
        <color rgba="0.168 0.571 0.776 1" />
      </material>
    </visual>
  </link>

  <!-- Pillars -->
  <xacro:add_box_pillar name="pillar1" x="0.1" y="0.1" z="0.32"/>
  <xacro:add_box_pillar name="pillar2" x="-0.1" y="0.1" z="0.32"/>
  <xacro:add_box_pillar name="pillar3" x="0.1" y="-0.1" z="0.32"/>
  <xacro:add_box_pillar name="pillar4" x="-0.1" y="-0.1" z="0.32"/>
</robot>
